<%
	List<StudentDto> list = (List<StudentDto>)request.getAttribute("list");
	if(list != null && list.size() > 0){
		%>
		<table border="1">
		<tr>
			<th>번호</th><th>이름</th><th>나이</th>
		</tr>
		<%
			for(int i = 0; i < list.size(); i++){
				StudentDto s = list.get(i);
				%>
				<tr>
					<th><%=i + 1 %></th>
					<th><%=s.getName() %></th>
					<th><%=s.getAge() %></th>
				<%
			}
		%>
		</table>
		<%
	}
%>


