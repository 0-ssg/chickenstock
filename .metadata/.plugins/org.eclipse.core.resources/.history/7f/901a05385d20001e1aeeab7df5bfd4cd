<!-- Query -->
<mapper namespace="mybatis.mapper">

						<!-- 들어오는 파라미터의 타입 -->
<insert id="addmember" parameterType="dto.MemberDto">
	insert into member(id, pwd, name, email, auth)
	values(#{id}, #{pwd}, #{name}, #{email}, 3)
</insert>
<!-- 1개의 row -->
<select id="getMember" parameterType="java.lang.String"
	resultType="dto.MemberDto">
	select id, pwd, name, email, auth
	from member
	where id=#{id}
</select>

<!-- 다수의 row -->
<select id="allMember" resultType="dto.MemberDto">
	select id, pwd, name, email, auth
	from member
</select>

<!-- delete -->
<delete id="delMember" parameterType="String">
	delete
	from member
	where id=#{id}
</delete>

<!-- update -->
<update id="upMember" parameterType="dto.MemberDto">
	update member
	set name = #{name}, email=#{email}
	where id = #{id}
	
</update>

<!-- bbs select -->
<select id="search" parameterType="dto.BbsParam" 
	resultType="dto.BbsDto">
	select *
	from bbs
	<if test="choice == 'title'">
	
	</if>
</select>

