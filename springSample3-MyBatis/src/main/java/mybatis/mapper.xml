<select id="search" parameterType="dto.BbsParam" 
	resultType="dto.BbsDto">
	select *
	from bbs
	<choose>
		<when test="choice == 'title'">
			where title like concat('%', #{search}, '%')
		</when>
		
		<when test="choice == 'content'">
			where content like concat('%', #{search}, '%')
		</when>
		
		<when test="choice == 'writer'">
			where id=#{search}
		</when>
		<!-- else에 해당함 
		<otherwise>
		</otherwise>
		-->
	</choose>
</select>

